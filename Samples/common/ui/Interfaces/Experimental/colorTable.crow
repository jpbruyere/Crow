<ListBox Data="{TestList}" >        
	<Template>
		<Scroller>
			<Table Name="ItemsContainer" Columns="name,Fit;color,100" Height="Fit" Width="Stretched" VerticalAlignment="Top"/> 
		</Scroller>
	</Template>
	<ItemTemplate>
		<TableRow>
			<Label Text="{}" Margin="5" />
			<Widget Background="{}" Width="50" Height="10"/>
		</TableRow>
	</ItemTemplate>

</ListBox>